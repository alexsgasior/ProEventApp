<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Find your Professional!</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
@*navbar navbar-inverse navbar-fixed-top*@
@*navbar navbar-expand-lg navbar-dark bg-primary*@
<body>
    <div class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action(actionName: "Index", controllerName: "Home", routeValues: null)">
                <img @*src="http://getbootstrap.com/assets/brand/bootstrap-solid.svg"*@src="https://www.colourbox.com/preview/3906699-people-network.jpg" width="30" height="30" class="d-inline-block align-top" alt="">
                Find Your Pro!
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menu-top" aria-controls="menu-top" aria-expanded="false" aria-label="Menu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse" id="menu-top">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">@Html.ActionLink(linkText: "Home", actionName: "Index", controllerName: "Home", routeValues: null, htmlAttributes: new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink(linkText: "Events", actionName: "Index", controllerName: "AppEvents", routeValues: null, htmlAttributes: new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink(linkText: "Professionals", actionName: "ListOfProsByProfessions", controllerName: "Professional", routeValues: null, htmlAttributes: new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink(linkText: "Professions", actionName: "Index", controllerName: "Professions", routeValues: null, htmlAttributes: new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink(linkText: "Advertisements", actionName: "Index", controllerName: "ProAdvertisements", routeValues: null, htmlAttributes: new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink(linkText: "Categories", actionName: "Index", controllerName: "Categories", routeValues: null, htmlAttributes: new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink(linkText: "Cities and States", actionName: "Index", controllerName: "Cities", routeValues: null, htmlAttributes: new { @class = "nav-link" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
<div class="page-content">
    <div class="page-content-color">
        <div class="container body-content">
            @RenderBody()
        </div>
    </div>
</div>
    <div class="page-footer">
        <div class="container">
            <footer>&copy; @DateTime.Now.Year - Find your Professional!</footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
</body>
</html>
