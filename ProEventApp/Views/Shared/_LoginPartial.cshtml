@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">
            @Html.ActionLink(linkText: "Hello " + User.Identity.GetUserName() + "!", actionName: "Index", controllerName: "Manage", routeValues: null, htmlAttributes: new { @class = "nav-link", @title = "Manage" })
        </li>
        <li class="nav-item"><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">@Html.ActionLink(linkText: "Register", actionName: "Register", controllerName: "Account", routeValues: null, htmlAttributes: new { @class = "nav-link", @id = "registerLink" })</li>
        <li class="nav-item">@Html.ActionLink(linkText: "Log in", actionName: "Login", controllerName: "Account", routeValues: null, htmlAttributes: new { @class = "nav-link", @id = "loginLink" })</li>
    </ul>
}
