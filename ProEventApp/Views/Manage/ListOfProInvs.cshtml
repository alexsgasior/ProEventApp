@model ProEventApp.ViewModels.ListOfProInvsViewModel
@{
    ViewBag.Title = "ListProInv";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Event to which you are invited for:</h2>

@foreach (var item in Model.EventProfessionals)
{
<div class="card text-white bg-success mb-3" style="max-width: 20rem;">
    <div class="card-header">
         @Html.ActionLink(linkText: "Show event details", actionName: "DetailsForPro", routeValues: new {id = item.AppEventId}, htmlAttributes: new {@class = "btn btn-primary"}, controllerName: "AppEvents")
    </div>
    <div class="card-body">
        <h4 class="card-title">@item.Price pln</h4>
        <p class="card-text">@item.Comment</p>
    </div>
    @Html.ActionLink(linkText: "ACCEPT", actionName: "ProChangeInvStatusToAccept", routeValues: new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary" })
    @Html.ActionLink(linkText: "DECLINE", actionName: "ProChangeInvStatusToDecline", routeValues: new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary" })
</div>
}


<p>
    @Html.ActionLink("Back to dashboard","Index","Manage",new{ @class="btn btn-primary"})
</p>


