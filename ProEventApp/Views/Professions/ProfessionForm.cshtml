@model ProEventApp.ViewModels.ProfessionFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Profession</h2>
@using (Html.BeginForm("Save", "Professions"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Profession.Name)
        @Html.TextBoxFor(m => m.Profession.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Profession.Description)
        @Html.TextAreaFor(m => m.Profession.Description, new { @class = "form-control", @rows = "15" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Profession.CategoryId)
        @Html.DropDownListFor(m => m.Profession.CategoryId, new SelectList(Model.Categories, "Id", "Name"), "Select category", new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.Profession.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}
