@model IEnumerable<ProEventApp.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Categories</h2>
@if (!Model.Any())
{
    <p>We don't have any categories yet.</p>
    <p>
        @Html.ActionLink("New Category", "New", "Categories", null, new { @class = "btn btn-primary" })
    </p>
}
else
{

    <p>
        @Html.ActionLink("New Category", "New", "Categories", null, new { @class = "btn btn-primary" })
    </p>


    <table class="table table-bordered table-hover table-dark table-striped">
        <thead class="bg-primary">
            <tr>
                <th>Category</th>
                <th>Description</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@Html.ActionLink(category.Name, "Edit", "Categories", new { id = category.Id }, null)</td>
                    <td>@category.Description</td>
                    @*<td>@Html.ActionLink("Details", "Details", "Professions", new { id = profession.Id }, null)</td>*@
                    <td>@Html.ActionLink("Delete", "Delete", "Categories", new { id = category.Id }, new { onclick = "return confirm('Are you sure you wish to delete this category?');" })</td>
                </tr>
            }
        </tbody>
    </table>
}

