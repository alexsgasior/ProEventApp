@model ProEventApp.Models.Category
@{
    ViewBag.Title = "CategoriesForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Category</h2>
@using (Html.BeginForm("Save", "Categories"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control _bigDescription" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control",@rows="15" })
    </div>


    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}


