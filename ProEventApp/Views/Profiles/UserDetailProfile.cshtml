@model ProEventApp.ViewModels.ProfileViewModel
<head>
    @{
        ViewBag.Title = "ProfileFromAds";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <style>
        body .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            max-width: 300px;
            margin: auto;
            text-align: center;
            font-family: arial;
        }

        body .title {
            color: grey;
            font-size: 18px;
        }

        body button {
            border: none;
            outline: 0;
            display: inline-block;
            padding: 8px;
            color: white;
            background-color: #000;
            text-align: center;
            cursor: pointer;
            width: 100%;
            font-size: 18px;
        }


        button:hover, a:hover {
            opacity: 0.7;
        }
    </style>
</head>
<body>

    <h2 style="text-align:center">@Model.AppUser.Name @Model.AppUser.Surname</h2>

    <div class="card">
        @if (@*Model.ProfileImages.Any()*@false)
        {
            foreach (var img in Model.ProfileImages)
            {
                <img src="data:image;base64,@System.Convert.ToBase64String(img.Image.Bytes)" width="100%" alt="@Model.Professional.Surname image" />
            }
        }
        else
        {
            <img src="https://images.pexels.com/photos/9260/nature-animals-green-game.jpg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260" alt="Deer" style="width: 100%">

        }



        <h1>@Model.AppUser.Name</h1>
        <p class="title"><span style="font-weight: bold; color: black;">About: </span>@Model.Profile.About</p>
        <p class="title">Motto: @Model.Profile.Motto</p>
        <p style="font-style: italic">Prefered name: @Model.Profile.PreferedName</p>
        <div style="margin: 24px 0;">
        </div>
        <p>
            <button>Phone: @Model.AppUser.Phone</button>
        </p>
        <p>
            <button>Mail: @Model.AppUser.Email</button>
        </p>
        </div>

        <div>
            <p>
                @Html.ActionLink("Change profile's photo", "AddImg", "Profiles", new { id = @Model.Profile.Id }, new { onclick = "return confirm('Are you sure you want to change your profile photo?');" })
            </p>
        </div>
        <div>
            <p>
                @Html.ActionLink(linkText: "Back to dashboard", actionName: "Index", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" }, controllerName: "Manage")
            </p>
        </div>

</body>



