@model IEnumerable<ProEventApp.Models.AppEvent>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Your events</h2>
@if (!Model.Any())
{
    <p>You don't have any events yet.</p>
    <p>
        @Html.ActionLink("Add new event!", "New", "AppEvents", null, new { @class = "btn btn-primary" })
    </p>
}
else
{

    <p>
        @Html.ActionLink("Add new event!", "New", "AppEvents", null, new { @class = "btn btn-primary" })
    </p>


    <table class="table table-bordered table-hover table-dark table-striped">
        <thead class="bg-primary">
            <tr>
                <th>Category</th>
                <th>Description</th>
                <th>Category</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var _event in Model)
            {
                <tr>
                    <td>@_event.Name</td>

                    <td>@_event.Description</td>

                    <td>@_event.Category.Name</td>

                    <td><a href="@Url.Action("DetailsForPro","AppEvents",new {_event.Id})">Details</a></td>

                </tr>
            }
        </tbody>
    </table>
}

