@model ProEventApp.Models.ProAdvertisement
@{
    ViewBag.Title = "AdvertisementForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New</h2>


<h2>New advertisement</h2>
@using (Html.BeginForm("Save", "ProAdvertisements", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    
    <div class="form-group">
        @Html.LabelFor(m => m.Advertisement.Title)
        @Html.TextBoxFor(m => m.Advertisement.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Advertisement.Title)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Advertisement.AdText)
        @Html.TextBoxFor(m => m.Advertisement.AdText, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Advertisement.AdText)
    </div>
    
    

   

    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Add</button>
}

<br />
<div>
    <p>
        @Html.ActionLink(linkText: "Back", actionName: "Index", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
    </p>
</div>




<style>

    .warning {
        color: red;
    }
</style>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
